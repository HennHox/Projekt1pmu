<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt1pmu.GravityForcePage"
             Title="Kalkulator sile teže">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Label Text="Kalkulacija sile teže" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="massEntry" Placeholder="Unesite masu (kg)"/>

        <Button
                Text="Izračunaj silu teže"
                Clicked="OnCalculateGravityForceClicked"
                HorizontalOptions="Center"/>

        <Label 
            x:Name="gravityResultLabel" 
            Text="Sila teže: " 
            FontSize="18" 
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>